
var FBPermission = {public_profile: false, email: false, publish_actions: false};

function initFB() {
  window.fbAsyncInit = function() {
    FB.init({
      appId: '<%= ENV["FACEBOOK_APP_ID"] %>',
      cookie: true, 
      xfbml: true,
      version: 'v2.2'
    });
  };

  (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/zh_TW/sdk.js";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));  
}

function readFBPermissions(data) {
  for (var i = 0; i < data.length; i++) {
    item = data[i];
    if (item.permission === 'public_profile') {
      FBPermission.public_profile = item.status === 'granted';
    }
    if (item.permission === 'email') {
      FBPermission.email = item.status === 'granted';
    }
    if (item.permission === 'publish_actions') {
      FBPermission.publish_actions = item.status === 'granted';
    }
  }
}

function checkPermissions(uid) {
  FB.api(
      "/" + uid + "/permissions",
      function (response) {
        if (response && !response.error) {
          readFBPermissions(response.data);
          window.location = '/auth/facebook/callback?signed_request=' + response.authResponse.signed_request;
        }
      }
  );  
}

function checkLoginState() {
  FB.getLoginStatus(function(response) {
    console.log(response);
    if(response.status === 'connected') {
      if(response.authResponse) {
        window.location = '/auth/facebook/callback?signed_request=' + response.authResponse.signedRequest;
        //checkPermissions(response.authResponse.userID);
      }
    }
    else {
      alert('Please ok');
    }
  });
}

(function() {
  initFB();
})()

